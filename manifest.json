{
  "manifest_version": 3,
  "name": "BetterYT",
  "version": "2.0.0",
  "description": "Integrate user-curated video feeds directly into YouTube's native homepage.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://www.youtube.com/feeds/videos.xml*",
    "https://www.googleapis.com/youtube/v3/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-WkW4lzUu.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/plus-icon-BzbHtC9O.js",
        "assets/storage-BdOWYOIQ.js",
        "assets/index.tsx-ClQLzcNy.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
