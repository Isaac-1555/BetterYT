{
  "manifest_version": 3,
  "name": "BetterYT",
  "version": "1.0.0",
  "description": "Integrate user-curated video feeds directly into YouTube's native homepage.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "betteryt.png",
      "48": "betteryt.png",
      "128": "betteryt.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://www.youtube.com/feeds/videos.xml*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-CNqH2SP7.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "icons": {
    "16": "betteryt.png",
    "48": "betteryt.png",
    "128": "betteryt.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/storage-oJWc5ht-.js",
        "assets/index.tsx-v_oYCbfw.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
