{
  "manifest_version": 3,
  "name": "BetterYT",
  "version": "1.0.0",
  "description": "Integrate user-curated video feeds directly into YouTube's native homepage.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://www.youtube.com/feeds/videos.xml*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-BT-QgKWT.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "resources": [
        "assets/storage-oJWc5ht-.js",
        "assets/index.tsx-Cn3H7A4O.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
